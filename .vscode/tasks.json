{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build g++ debug",
            "type": "shell",
            "command": "./compile.sh",
            "args": [                
                "gcc",
                "debug",
                "nomp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build g++ release",
            "type": "shell",
            "command": "./compile.sh",
            "args": [
                "gcc",
                "release",
                "nomp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build g++ release openmp",
            "type": "shell",
            "command": "./compile.sh",
            "args":[
                "gcc",
                "release",
                "omp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
